@model IEnumerable<RedJournal.Models.Meal.MealListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MealId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoodBefore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoodAfter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HungerBefore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HungerAfter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhoWith)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEntered)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MealId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoodBefore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoodAfter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HungerBefore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HungerAfter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WhoWith)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEntered)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MealId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MealId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MealId })
                </td>
            </tr>
        }

    </table>
